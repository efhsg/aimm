{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aimm.dev/schemas/industry-datapack.schema.json",
  "title": "IndustryDataPack",
  "description": "Complete collection output for one industry",
  "type": "object",
  "required": ["industry_id", "datapack_id", "collected_at", "macro", "companies", "collection_log"],
  "properties": {
    "industry_id": {
      "type": "string",
      "pattern": "^[a-z0-9_-]+$",
      "description": "Unique industry identifier"
    },
    "datapack_id": {
      "type": "string",
      "format": "uuid",
      "description": "UUID of this datapack"
    },
    "collected_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of collection start"
    },
    "macro": {
      "$ref": "#/$defs/MacroData"
    },
    "companies": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/CompanyData"
      },
      "description": "Companies indexed by ticker"
    },
    "collection_log": {
      "$ref": "#/$defs/CollectionLog"
    }
  },
  "$defs": {
    "MacroData": {
      "type": "object",
      "properties": {
        "commodity_benchmark": {
          "oneOf": [
            { "$ref": "#/$defs/DataPointMoney" },
            { "type": "null" }
          ]
        },
        "margin_proxy": {
          "oneOf": [
            { "$ref": "#/$defs/DataPointMoney" },
            { "type": "null" }
          ]
        },
        "sector_index": {
          "oneOf": [
            { "$ref": "#/$defs/DataPointNumber" },
            { "type": "null" }
          ]
        },
        "additional_indicators": {
          "type": "object",
          "additionalProperties": {
            "oneOf": [
              { "$ref": "#/$defs/DataPointMoney" },
              { "$ref": "#/$defs/DataPointNumber" }
            ]
          }
        }
      }
    },
    "CompanyData": {
      "type": "object",
      "required": ["ticker", "name", "listing_exchange", "listing_currency", "reporting_currency", "valuation", "financials", "quarters"],
      "properties": {
        "ticker": { "type": "string" },
        "name": { "type": "string" },
        "listing_exchange": { "type": "string" },
        "listing_currency": { "type": "string", "pattern": "^[A-Z]{3}$" },
        "reporting_currency": { "type": "string", "pattern": "^[A-Z]{3}$" },
        "valuation": { "$ref": "#/$defs/ValuationData" },
        "financials": { "$ref": "#/$defs/FinancialsData" },
        "quarters": { "$ref": "#/$defs/QuartersData" },
        "operational": {
          "oneOf": [
            { "$ref": "#/$defs/OperationalData" },
            { "type": "null" }
          ]
        }
      }
    },
    "ValuationData": {
      "type": "object",
      "required": ["market_cap"],
      "properties": {
        "market_cap": { "$ref": "#/$defs/DataPointMoney" },
        "fwd_pe": { "oneOf": [{ "$ref": "#/$defs/DataPointRatio" }, { "type": "null" }] },
        "trailing_pe": { "oneOf": [{ "$ref": "#/$defs/DataPointRatio" }, { "type": "null" }] },
        "ev_ebitda": { "oneOf": [{ "$ref": "#/$defs/DataPointRatio" }, { "type": "null" }] },
        "free_cash_flow_ttm": { "oneOf": [{ "$ref": "#/$defs/DataPointMoney" }, { "type": "null" }] },
        "fcf_yield": { "oneOf": [{ "$ref": "#/$defs/DataPointPercent" }, { "type": "null" }] },
        "div_yield": { "oneOf": [{ "$ref": "#/$defs/DataPointPercent" }, { "type": "null" }] },
        "net_debt_ebitda": { "oneOf": [{ "$ref": "#/$defs/DataPointRatio" }, { "type": "null" }] },
        "price_to_book": { "oneOf": [{ "$ref": "#/$defs/DataPointRatio" }, { "type": "null" }] },
        "additional_metrics": {
          "oneOf": [
            {
              "type": "object",
              "additionalProperties": {
                "oneOf": [
                  { "$ref": "#/$defs/DataPointMoney" },
                  { "$ref": "#/$defs/DataPointRatio" },
                  { "$ref": "#/$defs/DataPointPercent" },
                  { "$ref": "#/$defs/DataPointNumber" }
                ]
              }
            },
            { "type": "null" }
          ]
        }
      }
    },
    "FinancialsData": {
      "type": "object",
      "required": ["history_years", "annual_data"],
      "properties": {
        "history_years": { "type": "integer", "minimum": 0 },
        "annual_data": {
          "type": "array",
          "items": { "$ref": "#/$defs/AnnualFinancials" }
        }
      }
    },
    "AnnualFinancials": {
      "type": "object",
      "required": ["fiscal_year"],
      "properties": {
        "fiscal_year": { "type": "integer" },
        "revenue": { "oneOf": [{ "$ref": "#/$defs/DataPointMoney" }, { "type": "null" }] },
        "ebitda": { "oneOf": [{ "$ref": "#/$defs/DataPointMoney" }, { "type": "null" }] },
        "net_income": { "oneOf": [{ "$ref": "#/$defs/DataPointMoney" }, { "type": "null" }] },
        "net_debt": { "oneOf": [{ "$ref": "#/$defs/DataPointMoney" }, { "type": "null" }] },
        "free_cash_flow": { "oneOf": [{ "$ref": "#/$defs/DataPointMoney" }, { "type": "null" }] },
        "additional_metrics": {
          "oneOf": [
            {
              "type": "object",
              "additionalProperties": {
                "oneOf": [
                  { "$ref": "#/$defs/DataPointMoney" },
                  { "$ref": "#/$defs/DataPointRatio" },
                  { "$ref": "#/$defs/DataPointPercent" },
                  { "$ref": "#/$defs/DataPointNumber" }
                ]
              }
            },
            { "type": "null" }
          ]
        }
      }
    },
    "QuartersData": {
      "type": "object",
      "required": ["quarters"],
      "properties": {
        "quarters": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/QuarterFinancials" }
        }
      }
    },
    "QuarterFinancials": {
      "type": "object",
      "required": ["fiscal_year", "fiscal_quarter", "period_end"],
      "properties": {
        "fiscal_year": { "type": "integer" },
        "fiscal_quarter": { "type": "integer", "minimum": 1, "maximum": 4 },
        "period_end": { "type": "string", "format": "date" },
        "revenue": { "oneOf": [{ "$ref": "#/$defs/DataPointMoney" }, { "type": "null" }] },
        "ebitda": { "oneOf": [{ "$ref": "#/$defs/DataPointMoney" }, { "type": "null" }] },
        "net_income": { "oneOf": [{ "$ref": "#/$defs/DataPointMoney" }, { "type": "null" }] },
        "free_cash_flow": { "oneOf": [{ "$ref": "#/$defs/DataPointMoney" }, { "type": "null" }] },
        "additional_metrics": {
          "oneOf": [
            {
              "type": "object",
              "additionalProperties": {
                "oneOf": [
                  { "$ref": "#/$defs/DataPointMoney" },
                  { "$ref": "#/$defs/DataPointRatio" },
                  { "$ref": "#/$defs/DataPointPercent" },
                  { "$ref": "#/$defs/DataPointNumber" }
                ]
              }
            },
            { "type": "null" }
          ]
        }
      }
    },
    "OperationalData": {
      "type": "object",
      "additionalProperties": {
        "oneOf": [
          { "$ref": "#/$defs/DataPointMoney" },
          { "$ref": "#/$defs/DataPointNumber" },
          { "$ref": "#/$defs/DataPointPercent" }
        ]
      }
    },
    "CollectionLog": {
      "type": "object",
      "required": ["started_at", "completed_at", "duration_seconds", "company_statuses", "macro_status", "total_attempts"],
      "properties": {
        "started_at": { "type": "string", "format": "date-time" },
        "completed_at": { "type": "string", "format": "date-time" },
        "duration_seconds": { "type": "integer", "minimum": 0 },
        "company_statuses": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "enum": ["complete", "partial", "failed"]
          }
        },
        "macro_status": {
          "type": "string",
          "enum": ["complete", "partial", "failed"]
        },
        "total_attempts": { "type": "integer", "minimum": 0 }
      }
    },
    "DataPointMoney": {
      "type": "object",
      "required": ["value", "unit", "currency", "scale", "as_of", "retrieved_at", "method"],
      "properties": {
        "value": { "type": ["number", "null"] },
        "unit": { "const": "currency" },
        "currency": { "type": "string", "pattern": "^[A-Z]{3}$" },
        "scale": { "type": "string", "enum": ["units", "thousands", "millions", "billions", "trillions"] },
        "as_of": { "type": "string", "format": "date" },
        "source_url": { "type": ["string", "null"] },
        "retrieved_at": { "type": "string", "format": "date-time" },
        "method": { "type": "string", "enum": ["web_fetch", "web_search", "api", "derived", "not_found", "cache"] },
        "source_locator": { "oneOf": [{ "$ref": "#/$defs/SourceLocator" }, { "type": "null" }] },
        "attempted_sources": { "type": ["array", "null"], "items": { "type": "string" } },
        "derived_from": { "type": ["array", "null"], "items": { "type": "string" } },
        "formula": { "type": ["string", "null"] },
        "fx_conversion": { "oneOf": [{ "$ref": "#/$defs/FxConversion" }, { "type": "null" }] },
        "cache_source": { "type": ["string", "null"] },
        "cache_age_days": { "type": ["integer", "null"] }
      },
      "allOf": [
        { "$ref": "#/$defs/ProvenanceConstraints" }
      ]
    },
    "DataPointRatio": {
      "type": "object",
      "required": ["value", "unit", "as_of", "retrieved_at", "method"],
      "properties": {
        "value": { "type": ["number", "null"] },
        "unit": { "const": "ratio" },
        "as_of": { "type": "string", "format": "date" },
        "source_url": { "type": ["string", "null"] },
        "retrieved_at": { "type": "string", "format": "date-time" },
        "method": { "type": "string", "enum": ["web_fetch", "web_search", "api", "derived", "not_found", "cache"] },
        "source_locator": { "oneOf": [{ "$ref": "#/$defs/SourceLocator" }, { "type": "null" }] },
        "attempted_sources": { "type": ["array", "null"], "items": { "type": "string" } },
        "derived_from": { "type": ["array", "null"], "items": { "type": "string" } },
        "formula": { "type": ["string", "null"] },
        "cache_source": { "type": ["string", "null"] },
        "cache_age_days": { "type": ["integer", "null"] }
      },
      "allOf": [
        { "$ref": "#/$defs/ProvenanceConstraints" }
      ]
    },
    "DataPointPercent": {
      "type": "object",
      "required": ["value", "unit", "as_of", "retrieved_at", "method"],
      "properties": {
        "value": { "type": ["number", "null"] },
        "unit": { "const": "percent" },
        "as_of": { "type": "string", "format": "date" },
        "source_url": { "type": ["string", "null"] },
        "retrieved_at": { "type": "string", "format": "date-time" },
        "method": { "type": "string", "enum": ["web_fetch", "web_search", "api", "derived", "not_found", "cache"] },
        "source_locator": { "oneOf": [{ "$ref": "#/$defs/SourceLocator" }, { "type": "null" }] },
        "attempted_sources": { "type": ["array", "null"], "items": { "type": "string" } },
        "derived_from": { "type": ["array", "null"], "items": { "type": "string" } },
        "formula": { "type": ["string", "null"] },
        "cache_source": { "type": ["string", "null"] },
        "cache_age_days": { "type": ["integer", "null"] }
      },
      "allOf": [
        { "$ref": "#/$defs/ProvenanceConstraints" }
      ]
    },
    "DataPointNumber": {
      "type": "object",
      "required": ["value", "unit", "as_of", "retrieved_at", "method"],
      "properties": {
        "value": { "type": ["number", "null"] },
        "unit": { "const": "number" },
        "as_of": { "type": "string", "format": "date" },
        "source_url": { "type": ["string", "null"] },
        "retrieved_at": { "type": "string", "format": "date-time" },
        "method": { "type": "string", "enum": ["web_fetch", "web_search", "api", "derived", "not_found", "cache"] },
        "source_locator": { "oneOf": [{ "$ref": "#/$defs/SourceLocator" }, { "type": "null" }] },
        "attempted_sources": { "type": ["array", "null"], "items": { "type": "string" } },
        "derived_from": { "type": ["array", "null"], "items": { "type": "string" } },
        "formula": { "type": ["string", "null"] },
        "cache_source": { "type": ["string", "null"] },
        "cache_age_days": { "type": ["integer", "null"] }
      },
      "allOf": [
        { "$ref": "#/$defs/ProvenanceConstraints" }
      ]
    },
    "ProvenanceConstraints": {
      "description": "Method-specific provenance requirements shared by all DataPoint types",
      "allOf": [
        {
          "if": {
            "properties": { "method": { "enum": ["web_fetch", "web_search", "api"] } },
            "required": ["method"]
          },
          "then": {
            "properties": {
              "source_url": { "type": "string", "minLength": 1 },
              "source_locator": { "$ref": "#/$defs/SourceLocator" }
            },
            "required": ["source_url", "source_locator"]
          }
        },
        {
          "if": {
            "properties": { "method": { "const": "not_found" } },
            "required": ["method"]
          },
          "then": {
            "properties": {
              "value": { "type": "null" },
              "attempted_sources": { "type": "array", "minItems": 1 }
            },
            "required": ["attempted_sources"]
          }
        },
        {
          "if": {
            "properties": { "method": { "const": "derived" } },
            "required": ["method"]
          },
          "then": {
            "properties": {
              "derived_from": { "type": "array", "minItems": 1 },
              "formula": { "type": "string", "minLength": 1 }
            },
            "required": ["derived_from", "formula"]
          }
        },
        {
          "if": {
            "properties": { "method": { "const": "cache" } },
            "required": ["method"]
          },
          "then": {
            "properties": {
              "cache_source": { "type": "string", "minLength": 1 },
              "cache_age_days": { "type": "integer" }
            },
            "required": ["cache_source", "cache_age_days"]
          }
        }
      ]
    },
    "SourceLocator": {
      "type": "object",
      "required": ["type", "selector", "snippet"],
      "properties": {
        "type": { "type": "string", "enum": ["html", "json", "xpath"] },
        "selector": { "type": "string" },
        "snippet": { "type": "string", "maxLength": 100 }
      }
    },
    "FxConversion": {
      "type": "object",
      "required": ["original_currency", "original_value", "rate", "rate_as_of", "rate_source"],
      "properties": {
        "original_currency": { "type": "string", "pattern": "^[A-Z]{3}$" },
        "original_value": { "type": "number" },
        "rate": { "type": "number" },
        "rate_as_of": { "type": "string", "format": "date" },
        "rate_source": { "type": "string" }
      }
    }
  }
}
