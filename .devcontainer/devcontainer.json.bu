{
  "name": "AIMM (Yii)",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "aimm_yii",
  "workspaceFolder": "/var/www/html",
  "shutdownAction": "stopCompose",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": false,
      "installOhMyZsh": false
    }
  },
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/erwin/.ssh,type=bind,readonly"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "junstyle.php-cs-fixer",
        "anthropic.claude-code"
      ],
      "settings": {
        "intelephense.environment.includePaths": [
          "/var/www/html/yii/vendor"
        ],
        "intelephense.environment.phpVersion": "8.5",
        "php-cs-fixer.executablePath": "/var/www/html/yii/vendor/bin/php-cs-fixer"
      }
    }
  }
}
